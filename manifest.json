{
  "manifest_version": 2,
  "name": "Shortcuts",
  "description": "Like Shortcut Bookmarks, but with image icons instead of text. Also multi-tab-usage.",
  "version": "0.33",
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html",
    "default_title": "Click to open, click an image to execute"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "permissions": ["tabs", "webRequest", "webRequestBlocking", "*://*.tourisminvestment.com.au/*",
    "*://*.tour-aus.aws.haylix.net/*", "*://*.aussiespecialist.com/*", "*://localhost/*",
    "*://*.aussiespecialist.cn/*", "*://*.australia.com/*", "*://*.australia.cn/*"
  ]
}
